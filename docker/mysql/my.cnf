# =============================================================================
# MySQL Configuration
# =============================================================================
# Production-optimized MySQL settings for Laravel applications
# =============================================================================

[mysqld]
# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
default_storage_engine = InnoDB
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'
skip-character-set-client-handshake

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------
# Buffer pool (adjust based on available memory, ~70% of RAM)
innodb_buffer_pool_size = 512M
innodb_buffer_pool_instances = 2

# Log file size
innodb_log_file_size = 128M
innodb_log_buffer_size = 64M

# Flush behavior (durability vs performance balance)
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Connection settings
max_connections = 200
max_user_connections = 190
wait_timeout = 600
interactive_timeout = 600

# Query cache (disabled for MySQL 8.0+)
query_cache_type = 0
query_cache_size = 0

# Temp tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Joins
join_buffer_size = 2M
sort_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 2M

# -----------------------------------------------------------------------------
# InnoDB Settings
# -----------------------------------------------------------------------------
innodb_file_per_table = 1
innodb_stats_on_metadata = 0
innodb_lock_wait_timeout = 50
innodb_rollback_on_timeout = 0
innodb_read_io_threads = 8
innodb_write_io_threads = 8

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
log_error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
local_infile = 0
symbolic-links = 0
skip-symbolic-links

# -----------------------------------------------------------------------------
# Replication (if needed)
# -----------------------------------------------------------------------------
server_id = 1
log_bin = /var/log/mysql/mysql-bin
binlog_format = ROW
expire_logs_days = 7
max_binlog_size = 100M

[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4
