# =============================================================================
# Docker Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Vanessa
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC
APP_LOCALE=en

# =============================================================================
# Docker Settings
# =============================================================================
DOCKER_TARGET=development

# =============================================================================
# Port Configuration (Change if ports are already in use)
# =============================================================================
HTTP_PORT=80
HTTPS_PORT=443
DB_PORT=3306
REDIS_PORT=6379

# =============================================================================
# Database Configuration
# =============================================================================
DB_DATABASE=vanessa
DB_USERNAME=vanessa
DB_PASSWORD=vanessa_secret
DB_ROOT_PASSWORD=root_secret

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=redis_secret
REDIS_DB=0

# =============================================================================
# Mail Configuration (for development, mails are logged)
# =============================================================================
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@vanessaperfumes.com
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Docker Runtime Options
# =============================================================================
RUN_MIGRATIONS=false

# =============================================================================
# Security Keys (Generate strong random strings for production)
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=
SANCTUM_TOKEN_PREFIX=

# =============================================================================
# Third-party Services (for production)
# =============================================================================
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

SENDGRID_API_KEY=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
